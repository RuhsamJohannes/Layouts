<Window x:Class="Layouts.Windows.DockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts.Windows"
        mc:Ignorable="d"
        Title="DockWindow" Height="250" Width="400" MinHeight="250" MinWidth="400">
    
    <DockPanel>
        <Button DockPanel.Dock="Top" Content="Top 1"/>
        <Button DockPanel.Dock="Bottom" Content="Bottom 1"/>
        <Button DockPanel.Dock="Bottom" Content="Bottom 2"/>
        <Button DockPanel.Dock="Left" Content="Left"/>
        <Button DockPanel.Dock="Right" Content="Right 1"/>
        <Button DockPanel.Dock="Top" Content="Top 2"/>
        <Button DockPanel.Dock="Right" Content="Right 2"/>
        <Button Content="Center"/>
    </DockPanel>
    
</Window>
