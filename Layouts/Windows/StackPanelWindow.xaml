<Window x:Class="Layouts.Windows.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts.Windows"
        mc:Ignorable="d"
        Title="StackPanelWindow" Height="130" Width="250" MinHeight="130" MinWidth="250">
    
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <TextBlock Text="Feld 1" Margin="5,5,5,0"/>
            <TextBlock Text="Feld 2" Margin="5,0,5,0"/>
            <TextBlock Text="Feld 3" Margin="5,0,5,0"/>  
        </StackPanel>
        <StackPanel MinWidth="50"/>
        <StackPanel>
            <TextBox Text="1" MinWidth="40" Margin="5,5,5,0"/>
            <TextBox Text="2" MinWidth="40" Margin="5,0,5,0"/>
            <TextBox Text="3" MinWidth="40" Margin="5,0,5,0"/>
        </StackPanel>
    </StackPanel>
    
</Window>
